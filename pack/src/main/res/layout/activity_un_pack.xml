<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunsu.activity.UnPackActivity">

    <com.yunsu.common.view.TitleBar
        android:id="@+id/title_bar"
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll_fix_tip"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:visibility="visible"
        >
        <ImageView
            android:src="@drawable/ic_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_fix_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:visibility="visible"
            android:text="@string/unpack_tip"
            />

        <TextView
            android:id="@+id/tv_fix_tip_des"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:visibility="visible"
            android:text="@string/unpack_tip_des"
            android:layout_marginTop="60dp"
            />

        <EditText
            android:id="@+id/et_get_pack_key"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=" "/>

    </LinearLayout>

</RelativeLayout>
