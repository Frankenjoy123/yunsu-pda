<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunsu.activity.PackMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/ic_home_33"/>

            <LinearLayout
                android:layout_below="@+id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include
                    android:id="@+id/rl_pack_scan"
                    layout="@layout/action_item_layout_top_bottom" />

                <include
                    android:id="@+id/rl_settting"
                    layout="@layout/action_item_layout_top_bottom" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
