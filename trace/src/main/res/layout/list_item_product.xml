<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

    <TextView android:id="@+id/textviewNum" android:layout_width="0dp" android:layout_weight=".10"
        android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="60px"
        android:maxWidth="60px"
        android:layout_weight=".10"/>

    <TextView android:id="@+id/textview" android:layout_width="0dp"
		android:layout_height="wrap_content" android:layout_weight=".80"
		android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>
